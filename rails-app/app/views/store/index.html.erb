<h1>Store</h1>

<ul>
  <% cache @products do %>
    <% @products.each do |product| %>
      <li>
        <% cache product do %>
          <b><a href="<%= product_path(product) %>"><%= product.title %></a></b> -
          <span><%= number_to_currency(product.price) %>$</span>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
